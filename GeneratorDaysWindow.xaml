<Window x:Class="CounterMoney.GeneratorDaysWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CounterMoney"
        mc:Ignorable="d"
        Title="GeneratorDays" Height="250" Width="200">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top">
            <GroupBox Header="Генерация файла">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Calendar Name="generateCalendar" FirstDayOfWeek="Monday" SelectionMode="MultipleRange" />
                    <Button Name="generateDaysBtn" Click="OnGenerateDays" Content="Сгенерировать" />
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
